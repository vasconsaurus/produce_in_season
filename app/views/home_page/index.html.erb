<section class="banner-hero p-top-60 p-bottom-60 p-sides-30">
  <div class="script-md banner-hero__txt"><%= I18n.t('root.hero') %></div>
</section>

<section class="banner-buttons p-top-30 p-bottom-60 p-sides-30">
  <div class="p-bottom-30">
    <h3 class="yellow-txt"><%= I18n.t('action.search_by') %></h3>
  </div>
  <div class="button-holder">
    <div class="yellow-button script-lg rotate-minus-5">
      <%= link_to I18n.t('action.month').capitalize, item_seasons_path, class: 'link_action' %>
    </div>
    <div class="yellow-button script-lg rotate-zero">
      <%= link_to I18n.t('action.produce').capitalize, produce_items_path, class: 'link_action' %>
    </div>
  </div>
</section>

<section class="banner-about p-top-30 p-bottom-60 p-sides-30">
  <% if File.file?("#{Rails.root}/app/assets/img/fernando-andrade-nAOZCYcLND8-unsplash.png") %>
    <%= image_tag "/assets/img/front-development/fernando-andrade-nAOZCYcLND8-unsplash.png" %>
  <% end %>
  <div class="txt">
    <div class="p-bottom-30">
        <h3 class="white-txt"><%= I18n.t('root.about_title') %></h3>
    </div>
    <div>
      <p class="white-txt p-bottom-30"><%= I18n.t('root.about_text_p1') %></p>
      <p class="white-txt"><%= I18n.t('root.about_text_p2') %></p>
    </div>
  </div>
  <% if File.file?("#{Rails.root}/app/assets/img/fernando-andrade-nAOZCYcLND8-unsplash.png") %>
    <%= image_tag "/assets/img/front-development/fernando-andrade-nAOZCYcLND8-unsplash.png" %>
  <% end %>
</section>
