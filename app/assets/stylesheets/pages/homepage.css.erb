.banner-hero {
  background-image: url(<%= asset_path "/img/front-development/pierpaolo-riondato-s7r4xjKXo0s-unsplash.jpg" %>);
  background-color: var(--light-beige);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  color: white;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100px;
}

.banner-hero__txt {
  width: 60vw;
}

.banner-buttons {
  background-color: var(--red);
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}

.banner-about {
  background-color: var(--blue);
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  text-align: center;
}
